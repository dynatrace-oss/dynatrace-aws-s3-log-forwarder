{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "useBaseBranchConfig": "merge",
  "commitMessageExtra": "{{#if currentVersion}}from {{currentVersion}} {{/if}}to {{#if isSingleVersion}}{{{newVersion}}}{{else}}{{{newValue}}}{{/if}}",
  "prHourlyLimit": 0,
  "rebaseWhen": "conflicted",
  "pip_requirements": {
    "managerFilePatterns": [
      "/(^|/)([\\w-]*)requirements(-dev)?\\.(txt|pip)$/"
    ]
  },
  "packageRules": [
    {
      "matchPackageNames": [
        "public.ecr.aws/lambda/python"
      ],
      "allowedVersions": "<4"
    }
  ],
  "customManagers": [
    {
      "customType": "regex",
      "description": "Update lambda/python x86_64",
      "managerFilePatterns": [
        "/^template\\.yaml$/"
      ],
      "matchStrings": [
        "LambdaBaseImageMap:[\\S\\s]+?x86:\\s*Tag: '(?<currentValue>[^']+)'"
      ],
      "datasourceTemplate": "docker",
      "depNameTemplate": "public.ecr.aws/lambda/python"
    },
    {
      "customType": "regex",
      "description": "Update lambda/python arm64",
      "managerFilePatterns": [
        "/^template\\.yaml$/"
      ],
      "matchStrings": [
        "LambdaBaseImageMap:[\\S\\s]+?arm64:\\s*Tag: '(?<currentValue>[^']+)'"
      ],
      "datasourceTemplate": "docker",
      "depNameTemplate": "public.ecr.aws/lambda/python"
    },
    {
      "customType": "regex",
      "description": "Update Lambda Insights Extension Layer ARN (arm64)",
      "managerFilePatterns": [
        "/^get-required-lambda-layers\\.sh$/"
      ],
      "matchStrings": [
        "AWS_LAMBDA_INSIGHTS_EXTENSION_ARM64=\"arn:aws:lambda:(?<region>[^:]+):(?<accountId>\\d+):layer:LambdaInsightsExtension-Arm64:(?<currentValue>\\d+)\""
      ],
      "datasourceTemplate": "custom.lambda-insights-extension-arm64",
      "depNameTemplate": "LambdaInsightsExtension-Arm64",
      "versioningTemplate": "loose"
    }
  ],
  "customDatasources": {
    "lambda-insights-extension-arm64": {
      "defaultRegistryUrlTemplate": "https://docs.aws.amazon.com/AmazonCloudWatch/latest/monitoring/Lambda-Insights-extension-versionsARM.html",
      "format": "plain",
      "transformTemplates": [
        "{ \"releases\": releases.{ \"version\": $match(version, /arn:aws:lambda:us-east-1:580247275435:layer:LambdaInsightsExtension-Arm64:(\\d+)/).groups[0] }[version != null] }"

      ]
    }
  },
  "vulnerabilityAlerts": {
    "enabled": true
  }
}
